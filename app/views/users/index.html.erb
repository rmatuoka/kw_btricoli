<table>
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th>Password</th>
  </tr>
  <% for user in @users %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td><%= user.password %></td>
      <td><%= link_to "Visualizar", user %></td>
      <td><%= link_to "Editar", edit_user_path(user) %></td>
      <td><%= link_to "Deletar", user, :confirm => 'Tem certeza?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
