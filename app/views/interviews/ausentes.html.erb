<% title "Interviews" %>

<%=link_to "Motrar todos", interviews_path%> | Mostrar ausentes | <%=link_to "Resumo", reports_interviews_path%>

<br><br>

<table>
  <tr>
    <th>Entrevistador</th>
    <th>Data</th>
    <th>Ausente</th>
    <th>Recusou</th>
    
  </tr>
  <% for interview in @interviews %>
    <tr>
      <td><%= interview.entrevistador %></td>
      <td><%= interview.data %></td>
      <td><%= interview.ausente %></td>
      <td><%= interview.recusou %></td>
      <td><%= link_to "Mostrar/Editar", edit_interview_path(interview) %></td>
      <td><%= link_to "Deletar", interview, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "Criar nova", new_interview_path %></p>
